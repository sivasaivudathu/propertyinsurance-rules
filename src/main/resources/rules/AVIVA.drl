rule "AVIVA-Criteria Based on Country-1"
salience 0
	when
	    $insuranceInfo:PropertyInsuranceDetails($propertyDetails:PropertyDetails)
	  	eval(isCountryTerrorised($propertyDetails.country))
	    $list: ArrayList()
    then
    	$list.add(new Insurer("AVIVA","30%"));
end
