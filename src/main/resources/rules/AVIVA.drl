end

rule "AVIVA-Criteria Based on Type"
salience 3
	when
	    $insuranceInfo:PropertyInsuranceDetails(propertyDescription.propertyType == "shopping center" && propertyDescription.isClaimMade == "yes" )
	    $list: ArrayList()
	    $insurer:Insurer(name == "AVIVA") from $list
